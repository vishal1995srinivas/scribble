enum Permission {
	ADMIN
	USER
	STORYCREATE
	STORYUPDATE
	STORYDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @id
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Post {
	id: ID! @id
	title: String!
	description: String!
	image: String
	largeImage: String
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
	user: User! 
}
